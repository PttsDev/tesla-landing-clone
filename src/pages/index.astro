---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Electric Cars, Solar & Clean energy | Tesla">
  <main>
    <header
      class="flex items-center fixed top-0 w-full justify-between z-40 text-white"
    >
      <h1 class="pl-8 py-4 flex flex-grow basis-0">
        <a class="pl-4" href="#" aria-label="Tesla Logo">
          <svg
            class="h-6 w-[120px]"
            viewBox="0 0 342 35"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z"
              fill="currentColor"></path></svg
          >
        </a>
      </h1>
      <nav>
        <ul
          class="flex text-sm py-3.5 [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:py-1 [&>li>a>span]:mx-2"
        >
          <li>
            <a href="#"><span>Model S</span></a>
          </li>
          <li>
            <a href="#"><span>Model 3</span></a>
          </li>
          <li>
            <a href="#"><span>Model X</span></a>
          </li>
          <li>
            <a href="#"><span>Model Y</span></a>
          </li>
          <li>
            <a href="#"><span>Powerwall</span></a>
          </li>
          <li>
            <a class="px-1 py-2" href="#"><span class="mx-2">Charging</span></a>
          </li>
        </ul>
      </nav>

      <nav class="flex flex-grow basis-0 justify-end pr-8">
        <ul
          class="flex text-sm py-3.5 [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:py-1 [&>li>a>span]:mx-2"
        >
          <li><a href=""><span>Support</span></a></li>
          <li><a href=""><span>Shop</span></a></li>
          <li><a href=""><span>Account</span></a></li>
          <li><a href=""><span>Menu</span></a></li>
        </ul>
      </nav>
    </header>

    <section class="w-full h-full overflow-hidden relative text-center">
      <div class="relative z-20 flex flex-col h-screen">
        <header class="pr-3">
          <h2
            class="text-white mt-[150px] px-6 text-[40px] font-medium tracking-[-0.012em] -mb-0.5"
          >
            Experience Tesla
          </h2>

          <p
            class="-mt-0.5 text-white text-base text-[14px] px-6 pb-[14px] text-sm"
          >
            Schedule a Test Drive Today
          </p>
        </header>

        <footer
          class="flex flex-col flex-grow pb-20 pr-3 justify-end items-center"
        >
          <a
            class="text-white border-[3px] rounded-md px-6 py-[5px] hover:bg-white hover:text-black transition-all duration-[3000ms] ease-in-out"
            href="#"
            ><span class="text-sm font-medium px-[68px]">Test Drive</span></a
          >
        </footer>
      </div>

      <div class="absolute top-0 bottom-0 z-10">
        <video
          class="object-cover h-full w-screen"
          autoplay
          muted
          loop
          src="video.webm"
        >
        </video>
      </div>
    </section>
  </main>
</Layout>

<style></style>
